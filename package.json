{
  "name": "tailwind-quartz",
  "version": "0.2.0",
  "description": "Modern Tailwind-based component library with Quartz design system",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tailwind-preset": {
      "types": "./dist/tailwind-preset.d.ts",
      "import": "./dist/tailwind-preset.mjs",
      "require": "./dist/tailwind-preset.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "import": "./dist/tokens/index.mjs",
      "require": "./dist/tokens/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "INTEGRATION.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "preview": "vite",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": ">=16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@storybook/addon-essentials": "^7.6.0",
    "@storybook/addon-interactions": "^7.6.0",
    "@storybook/addon-links": "^7.6.0",
    "@storybook/blocks": "^7.6.0",
    "@storybook/builder-webpack5": "^7.6.0",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^7.6.0",
    "@storybook/react-webpack5": "^7.6.0",
    "@storybook/testing-library": "^0.2.0",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "react": "^18.3.1",
    "react-docgen-typescript": "^2.4.0",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^18.3.1",
    "storybook": "^7.6.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.4.5",
    "vite": "^6.0.6"
  },
  "keywords": [
    "react",
    "component-library",
    "tailwind",
    "tailwindcss",
    "design-system",
    "quartz",
    "ui-components"
  ],
  "author": "MagicLex",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/magiclex/tailwind-quartz.git"
  },
  "bugs": {
    "url": "https://github.com/magiclex/tailwind-quartz/issues"
  },
  "homepage": "https://github.com/magiclex/tailwind-quartz#readme",
  "publishConfig": {
    "access": "public"
  }
}
