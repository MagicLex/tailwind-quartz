{
  "name": "@logicalclocks/tailwind-quartz",
  "version": "0.1.0",
  "description": "Modern Tailwind-based component library for Logical Clocks",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./tailwind.config.js": "./tailwind.config.js"
  },
  "files": [
    "dist",
    "src",
    "tailwind.config.js",
    "INTEGRATION.md"
  ],
  "scripts": {
    "build": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "tsc --watch --emitDeclarationOnly --declaration --outDir dist"
  },
  "peerDependencies": {
    "react": ">=16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": ">=16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@logicalclocks/design-tokens": "^4.0.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.5"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}